# .env.example — AggressiveTradingSystem
# Copy this file to .env and fill in your actual values.

# ── Exchange ──────────────────────────────
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# ── Notifications ─────────────────────────
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ── Trading Universe ──────────────────────
SYMBOLS=ETH/USDT,SOL/USDT,DOGE/USDT,XRP/USDT,AVAX/USDT
TIMEFRAME=5m
CHECK_INTERVAL=60
AUTO_TRADE=true

# ── ML / RL ───────────────────────────────
USE_RL=true
USE_TAKE_PROFIT=true

# ── Risk Parameters ───────────────────────
MAX_RISK_PER_TRADE=         
MAX_LEVERAGE=               
MIN_LEVERAGE=               
ATR_STOP_MULTIPLIER=        
TRAILING_STOP_DISTANCE=     
MAX_CONCURRENT_POSITIONS=   
TARGET_EXPOSURE=            
DYNAMIC_LEVERAGE_FLOOR=     
DYNAMIC_LEVERAGE_CEILING=   
RISK_REWARD_TARGET=         

# ── Safety Limits ─────────────────────────
DAILY_LOSS_LIMIT=           #(percent)
CONSECUTIVE_LOSS_LIMIT=     

# ── Backtest Only ─────────────────────────
BACKTEST_INITIAL_BALANCE=10000
BACKTEST_START_DATE=2024-07-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_SYMBOLS=BTC/USDT
